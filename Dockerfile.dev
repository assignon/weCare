# Development Dockerfile for Vue.js Shopper App
# Optimized for development with hot reloading and debugging

FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install git for dependencies that might need it
RUN apk add --no-cache git

# Create node user
RUN addgroup -g 1000 node && adduser -u 1000 -G node -s /bin/sh -D node || true

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies)
RUN npm install

# Copy source code
COPY . .

# Set proper permissions
RUN chown -R node:node /app

# Switch to non-root user
USER node

# Expose port (Vite default port)
EXPOSE 3001

# Development server with hot reloading
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "3001"] 